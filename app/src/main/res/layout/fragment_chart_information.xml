<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.user.epicfitproject.fragments.ChartInformation">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:textColor="@color/greenOne"
            android:text="Blue line - this training"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:background="@drawable/line_blue"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:textColor="@color/greenOne"
            android:text="Red line - goal"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="10dp"
            android:layout_gravity="bottom"

            android:background="@drawable/line_red"
            />
    </LinearLayout>

</LinearLayout>
