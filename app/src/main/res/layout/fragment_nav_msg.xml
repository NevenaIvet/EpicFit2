<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rectangle"
    tools:context=".fragments.NavigationMSG">

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/greenOne"
        android:id="@+id/text_sys"
        android:text="Now simply add exercises to your goal and we will track your progress"
        android:layout_height="match_parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Got it"
        android:textColor="@color/greenOne"
        android:background="@drawable/rectangle"
        android:layout_gravity="right"
        android:id="@+id/continue_button_sys">

    </Button>
</LinearLayout>
