<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.RepetitionsSets">


    <TextView
        android:layout_width="match_parent"
        android:text="How many do you want me to add ?"
        android:layout_margin="20dp"
        android:focusable="false"
        android:textSize="25sp"
        android:textColor="@color/greenFive"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/heading_customize_ex" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:text="Sets"
                android:textColor="@color/greenFive"
                android:gravity="center"
                android:clickable="false"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"

                android:id="@+id/sets_count_TF"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/greenFive"
                android:text="Repetitions"
                android:layout_height="match_parent"
                android:focusable="false"
                android:gravity="center"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/repetitions_count_TF"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/next_button"
            android:background="@drawable/rectangle"
            android:layout_weight="0.5"
            android:layout_margin="25dp"
            android:text="next"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:id="@+id/cancel_button"
            android:background="@drawable/rectangle"
            android:layout_weight="0.5"
            android:text="cancel"/>

    </LinearLayout>


    </LinearLayout>


