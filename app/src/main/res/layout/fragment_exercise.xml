<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/frag_exercise"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@null"
    tools:context=".fragments.ExerciseFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_exercise_name_tv"
        android:textColor="@color/greenOne"
        android:textStyle="italic"
        android:text="ime na uprajnenieto"
        android:textSize="25sp"
        android:gravity="left"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/greenOne"

            android:textSize="20sp"
            android:text="Your goal sets"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="chisloto"
            android:layout_marginLeft="15dp"
            android:textColor="@color/greenOne"
            android:textSize="20sp"
            android:id="@+id/number_of_sets_tv"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:text="Your repetitions per set"
            android:textColor="@color/greenOne"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/number_of_reps_tv"
            android:layout_height="match_parent"
            android:textColor="@color/greenOne"
            android:textSize="20sp"
            android:text="chisloto"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
