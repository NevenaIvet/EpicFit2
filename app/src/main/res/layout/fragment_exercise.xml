<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ExerciseFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_exercise_name_tv"
        android:text="ime na uprajnenieto"
        android:textSize="35sp"
        android:gravity="center"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Your goal sets"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="chisloto"
            android:id="@+id/number_of_sets_tv"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Your repetitions per set"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:id="@+id/number_of_reps_tv"
            android:layout_height="match_parent"
            android:text="chisloto"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
