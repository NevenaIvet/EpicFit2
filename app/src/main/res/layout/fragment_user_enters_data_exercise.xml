<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@null"
    android:id="@+id/user_enters_data_fragment"
    tools:context=".fragments.UserEntersDataExercise">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="25dp"
        android:text="I managed"
        android:textColor="@color/greenOne"
        android:gravity="left"
        android:layout_marginBottom="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textColor="@color/greenOne"
            android:layout_height="match_parent"
            android:text="Done sets"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="0"
            android:textColorHint="@color/greenOne"
            android:textColor="@color/greenOne"
            android:id="@+id/number_of_sets_user_enters"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/greenOne"
            android:text="Done repetitions"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:textColorHint="@color/greenOne"
            android:hint="0"
            android:id="@+id/number_of_reps_user_enters"
            android:layout_height="match_parent"
            android:textColor="@color/greenOne"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:background="@drawable/rectangle"
        android:textColor="@color/greenOne"
        android:id="@+id/show_next_exercise"/>


</LinearLayout>
